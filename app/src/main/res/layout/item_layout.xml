<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_player"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight=".2"
                android:src="#4CAF50" />

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/img_up_down"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".1"
                android:src="@drawable/ic_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="sdhgjkdfsbgjdsnkjgndsfkjgbndsfjgbsdjfbgjdfnbgjkdfbgkjdsfnbgjknbsdfjkgbnsdjh sdjfhbgvnjsdfbgvkjdsfbgjkerrgb hb ghkjsdfb sjghvmsd gfbjghmb sdfjhg bskjnsdmgbjdfmnbjmsdf bjdsfbnfgjh nsdrjkg dnbskjsmjdbfgjdsfbngjhsdbfgjsdfnsdfkbnsdjhbsej"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_read_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                android:text="READ MORE" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>